<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/details">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/touxiang_details"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/default_anonymous_users_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:scaleType="fitStart"
            app:riv_corner_radius="30dip"
            app:riv_border_width="0dip"
            app:riv_border_color="#333333"
            app:riv_mutate_background="true"
            app:riv_tile_mode="repeat"
            app:riv_oval="true" />


        <ImageButton
            android:id="@+id/hot_btn_details"
            android:layout_marginLeft="290dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/default_anonymous_users_avatar"
            android:background="#efefef"
            android:textSize="15dp"
            android:scrollbarSize="30dp"
            android:layout_marginEnd="56dp"
            android:layout_alignTop="@+id/name_details"
            android:layout_alignEnd="@+id/textView9" />

        <TextView
            android:id="@+id/name_details"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="名字"
            android:textSize="15dp"
            android:textColor="@color/bg_black"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/touxiang_details"
            android:layout_toEndOf="@+id/touxiang_details" />


        <TextView
            android:padding="10dp"
            android:textColor="@color/bg_black"
            android:id="@+id/content_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textSize="15dp"
            android:layout_marginTop="40dp"
            android:layout_toEndOf="@+id/touxiang_details" />

        <TextView
            android:id="@+id/time_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textSize="15dp"
            android:layout_below="@+id/content_details"
            android:layout_alignStart="@+id/textView9" />


        <TextView
            android:layout_marginTop="32dp"
            android:background="#eee7e7e7"
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_below="@+id/content_details"
            android:layout_alignStart="@+id/name_details"
            android:id="@+id/textView9" />

    </RelativeLayout>

</LinearLayout>